<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
       >

	    <TextView
	        android:id="@+id/dateText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="15dp"
	        android:textSize="@dimen/fonts_18"
	        android:text="" />
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
		        android:id="@+id/area"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="40dp"
		        android:textSize="@dimen/fonts_18"
		        android:text="面积:" />
            <TextView
		        android:id="@+id/areaText"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="@dimen/fonts_16"
		        android:layout_toRightOf="@+id/area"
			    android:layout_marginLeft="30dp"
		        android:text="" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
		        android:id="@+id/cover"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="40dp"
		        android:textSize="@dimen/fonts_18"
		        android:text="套数:" />
            <TextView
		        android:id="@+id/coverText"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="@dimen/fonts_16"
		        android:layout_toRightOf="@+id/cover"
			    android:layout_marginLeft="30dp"
		        android:text="" />
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
		        android:id="@+id/money"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="40dp"
		        android:textSize="@dimen/fonts_18"
		        android:text="金额:" />
            <TextView
		        android:id="@+id/moneyText"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="@dimen/fonts_16"
		        android:layout_toRightOf="@+id/money"
			    android:layout_marginLeft="30dp"
		        android:text="" />
        </TableRow>
          <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
		        android:id="@+id/average"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="40dp"
		        android:textSize="@dimen/fonts_18"
		        android:text="均价:" />
            <TextView
		        android:id="@+id/averageText"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="@dimen/fonts_16"
		        android:layout_toRightOf="@+id/average"
			    android:layout_marginLeft="30dp"
		        android:text="" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
